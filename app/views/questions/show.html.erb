<div class="show_post">
  
  <div class="post_title"><%= @question.title %></div>
  <div class="post_body"><%= @question.content %></div>
  
  <%= render partial: "shared/voting", locals: {voteable: @question} %>

  <%= link_to "Answer Question", new_question_answer_path(@question) %>
</div>

<div class="answers">
  <h1>Answers</h1>
  <ul class="answers">
    <% @question.answers.each do |answer| %>

    <li><%= answer.content %></li>

    <%= render partial: "shared/voting", locals: {voteable: answer} %>
    

    <%= link_to winner_path(winner_id: answer.id, question_id: @question.id), :remote=>true, :method=> 'post', :class => "winner" do %>
      <% if @question.winner == answer.id %>
        <i class="icon-star icon-3x"></i> 
      <% else %>
       <i class="icon-star-empty icon-3x"></i>
      <% end %> 
    <% end %>

    <% end %>
  </ul>



