<div class="show_post">
  <div class="post_title"><%= @question.title %></div>
  <div class="post_body">
    <%= render partial: "shared/question_voting", locals: {voteable: @question} %>
    <div class="question_text"
      <p> <%= @question.content %> </p>
    </div>

    <div class="delete_button_div">
    <%= link_to "Delete Question", @question, :method=> 'delete', :class => "delete_button" if @question.user == current_user%>
    </div>
  
    <div class="comment_button_div">
    <%= link_to "Comment on Question", new_comment_path({:commentable_type => "Question", :commentable_id => @question.id}), :remote=>true, :method=> 'get', :class => "comment_button" %>
    </div>
    
    <div id="comment_form"></div>
    <div class="question_comments"
      <ul>
        <%= render :partial => "comments/comment", :collection => @comments %>
      </ul>
    </div>
  </div>



<h1>Answers</h1>

<br>
  <%= link_to "Answer Question", new_question_answer_path(@question), :remote=>true, :method=> 'get', :class => "answer_button" %>
  <div id="answer_form"></div>

<div class="answers">


  <ul id="answer_list" class="answers">
    <% @answers.each do |answer| %>

    <%= render partial: "shared/answer", locals: {question: @question,
      answer: answer } %>

      <% end %>
    </ul>

</div>

